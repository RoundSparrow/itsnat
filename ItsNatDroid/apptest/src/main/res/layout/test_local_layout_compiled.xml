<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="org.itsnat.itsnatdroidtest.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <Button
            android:id="@id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="back" />

        <Button id="buttonReload"
                android:id="@id/buttonReload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_reload" />

        <!-- Testing misc attribs -->
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent">

            <TextView android:id="@id/textViewTest1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/hello_world1"
                      android:textSize="15dp"
                      android:background="@android:color/holo_green_light"
                      android:layout_alignParentTop="true"
                      style="@style/test"/>

            <TextView android:id="@id/textViewTest2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/hello_world2"
                      android:background="#dddddd"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:layout_below="@id/textViewTest1" />
        </RelativeLayout>

        <!-- Testing custom currentTarget class -->
        <org.itsnat.itsnatdroidtest.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Custom View"
            android:background="#ffdddd"/>

        <!-- Testing layout_gravity y layout_weight -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#dddddd"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test layout_gravity 1"
                android:background="#aaaaaa"
                android:layout_gravity="top|left"
                android:layout_weight="70"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test layout_gravity 2"
                android:background="#aaaaaa"
                android:layout_gravity="bottom|right"
                android:layout_weight="30"/>

        </LinearLayout>

        <!-- Test margins and gravity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffdddd"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="0dp"
                android:text="Test Margins 1"
                android:background="#aaaaaa"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Test Margins 2"
                android:background="#aaaaaa"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Test gravity"
                android:gravity="bottom|right"
                android:background="#aaaaaa"/>

        </LinearLayout>

        <!-- Test LinearLayout gravity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dddddd"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test LinearLayout gravity 1"
                android:background="#aaaaaa"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test LinearLayout gravity 2"
                android:background="#aaaaaa"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>

