<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="org.itsnat.itsnatdroidtest.MainActivity">

    <Button android:id="@+id/gotoTests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO TO TESTS"
            android:textSize="20dp"
            android:layout_alignParentTop="true" />


    <TextView android:id="@+id/titleUrlTestCore"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="URL Test Core"
              android:ems="10"
              android:layout_marginTop="30dp"
              android:layout_below="@id/gotoTests" />

    <EditText android:id="@+id/urlTestCore"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:inputType="textUri"
              android:hint="Remote URL Test Core"
              android:ems="10"
              android:layout_marginTop="5dp"
              android:layout_below="@id/titleUrlTestCore" />

    <TextView android:id="@+id/titleUrlRemoteControl"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="URL Test Remote Control"
              android:ems="10"
              android:layout_marginTop="10dp"
              android:layout_below="@+id/urlTestCore" />

    <EditText android:id="@+id/urlTestRemoteControl"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:inputType="textUri"
              android:hint="Remote URL Test Control"
              android:ems="10"
              android:layout_marginTop="5dp"
              android:layout_below="@+id/titleUrlRemoteControl" />

    <Button android:id="@+id/saveUrls"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="SAVE URLs"
              android:textSize="20dp"
              android:layout_marginTop="20dp"
              android:layout_below="@id/urlTestRemoteControl"/>





    <FrameLayout android:id="@+id/frameParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="50dp"
        android:background="#dd0000"
        android:layout_marginTop="20dp"
        android:layout_below="@id/saveUrls">
        <FrameLayout android:id="@+id/frameChild"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#00dd00">
        </FrameLayout>
        <EditText android:id="@+id/editTextPrueba"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

</RelativeLayout>
