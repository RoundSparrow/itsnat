<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="org.itsnat.itsnatdroidtest.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <Button
            android:id="@id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="back" />

        <Button id="buttonReload"
                android:id="@id/buttonReload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_label" />

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent">

            <TextView android:id="@id/textViewTest1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/hello_world1"
                      android:textSize="15dp"
                      android:background="@android:color/holo_green_light"
                      android:layout_alignParentTop="true"
                      style="@style/test"/>

            <TextView android:id="@id/textViewTest2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/hello_world2"
                      android:background="#dddddd"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:layout_below="@id/textViewTest1" />
        </RelativeLayout>

        <org.itsnat.itsnatdroidtest.CustomTextView
            android:id="@id/textViewTest3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world3"
            android:background="#ffdddd"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#aaaaaa"
            android:orientation="horizontal">
            <!-- Testing layout_gravity y layout_weight -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hello_world4"
                android:background="#dddddd"
                android:layout_gravity="top"
                android:layout_weight="70"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hello_world5"
                android:background="#dddddd"
                android:layout_gravity="bottom"
                android:layout_weight="30"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>



