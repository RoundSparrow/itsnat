<org.itsnat.itsnatdroidtest.testact.util.CustomScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="org.itsnat.itsnatdroidtest.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <Button
            android:id="@id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK" />

        <Button
            android:id="@id/buttonReload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_reload" />

        <!-- Testing misc attribs (for instance access resources by res id) -->
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent">

            <TextView id="textViewTest1"
                      android:id="@id/textViewTest1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/hello_world1"
                      android:textSize="15dp"
                      android:padding="@dimen/activity_horizontal_margin"
                      android:textColor="#0000ff"
                      android:background="@android:color/holo_green_light"
                      android:layout_alignParentTop="true"
                      style="@style/test"/>

            <TextView android:id="@id/textViewTest2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/hello_world2"
                      android:background="#dddddd"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:layout_below="@id/textViewTest1" />
        </RelativeLayout>

        <!-- Testing custom currentTarget class -->
        <org.itsnat.itsnatdroidtest.testact.util.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Custom View"
            android:background="#ffdddd"/>

        <!-- Test View Attribs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffdddd">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test View Attribs 1"
                android:alpha="0.7"
                android:background="#dddddd"
                android:clickable="false"
                android:contentDescription="For Testing View Attribs"
                android:drawingCacheQuality="high" />

            <!-- Necesario un ScrollView o similar para poder testear fadeScrollbars, en TextView es ignorado
                requiresFadingEdge es necesario para que no se ignore fadingEdgeLength
             -->
            <ScrollView android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:fadeScrollbars="true"
                        android:requiresFadingEdge="vertical|horizontal"
                        android:fadingEdgeLength="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test View Attribs 2"
                android:background="#dddddd"
                android:filterTouchesWhenObscured="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hapticFeedbackEnabled="false"
                android:id="@id/testId"
                android:isScrollContainer="true"
                android:keepScreenOn="true"
                android:layerType="hardware"
                android:longClickable="true"
                android:minHeight="30dp"
                android:minWidth="30dp"
                android:nextFocusDown="@id/testId"
                android:nextFocusForward="@id/testId"
                android:nextFocusLeft="@id/testId"
                android:nextFocusRight="@id/testId"
                android:nextFocusUp="@id/testId"
                android:onClick="clickHandler"
                android:paddingLeft="10dp"
                android:paddingRight="11dp"
                android:paddingTop="12dp"
                android:paddingBottom="13dp"
                android:rotation="10.5"
                android:rotationX="45.5"
                android:rotationY="10.5"
                android:saveEnabled="false"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:scrollX="5dp"
                android:scrollY="5dp"
                android:scrollbarStyle="insideInset"
                android:soundEffectsEnabled="false"
                android:tag="theTag"
                android:transformPivotX="70dp"
                android:transformPivotY="10dp"
                android:translationX="10dp"
                android:translationY="10dp"
                />

        </LinearLayout>

        <!-- Test ViewGroup Attribs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffdddd"
            android:orientation="vertical"
            android:addStatesFromChildren="true"
            android:alwaysDrawnWithCache="false"
            android:animateLayoutChanges="true"
            android:animationCache="false"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:descendantFocusability="afterDescendants"
            android:layoutAnimation="@anim/fade_in_layout"
            android:persistentDrawingCache="animation|scrolling"
            android:splitMotionEvents="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test ViewGroup Attribs"
                android:background="#dddddd" />

        </LinearLayout>

        <!-- Test ViewGroup.MarginLayoutParams -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffdddd"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="0dp"
                android:text="Test Margins 1"
                android:background="#aaaaaa"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Test Margins 2"
                android:background="#aaaaaa"/>

        </LinearLayout>

        <!-- Test GridLayout Attribs Horizontal -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignBounds"
            android:columnCount="3"
            android:columnOrderPreserved="false"
            android:orientation="horizontal"
            android:rowCount="3"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true"
            >
            <TextView
                android:text="Cell 0"
                android:background="#dddddd" />
            <TextView
                android:text="Cell 1"
                android:background="#dddddd" />
            <TextView
                android:text="Cell 2"
                android:background="#dddddd" />
            <TextView
                android:text="Cell 3"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_gravity="fill|right"
                android:background="#dddddd" />
            <TextView
                android:text="Cell 4"
                android:background="#dddddd" />
        </GridLayout>

        <!-- Test GridLayout Attribs Vertical -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignBounds"
            android:columnCount="3"
            android:columnOrderPreserved="false"
            android:orientation="vertical"
            android:rowCount="3"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true"
            >
            <TextView
                android:text="Cell 0"
                android:background="#dddddd" />
            <TextView
                android:text="Cell 1"
                android:background="#dddddd" />
            <TextView
                android:text="Cell 2"
                android:background="#dddddd" />
            <TextView
                android:text="Cell 3"
                android:layout_row="1"
                android:layout_rowSpan="2"
                android:layout_gravity="fill|right"
                android:background="#dddddd" />
            <TextView
                android:text="Cell 4"
                android:background="#dddddd" />
        </GridLayout>

        <!-- Test FrameLayout Attribs -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="#55ddffdd"
            android:foregroundGravity="top|left"
            android:measureAllChildren="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test FrameLayout Attribs"
                android:background="#dddddd" />
        </FrameLayout>

        <!-- Test LinearLayout Attribs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffdddd"
            android:baselineAligned="false"
            android:baselineAlignedChildIndex="1"
            android:divider="@drawable/divider_test"
            android:showDividers="beginning|middle"
            android:dividerPadding="10dp"
            android:measureWithLargestChild="true"
            android:orientation="vertical"
            android:weightSum="1.0"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test LinearLayout Attribs"
                android:background="#dddddd"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Some text"
                android:background="#dddddd"/>

        </LinearLayout>

        <!-- Test LinearLayout gravity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dddddd"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test LinearLayout gravity 1"
                android:background="#aaaaaa"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test LinearLayout gravity 2"
                android:background="#aaaaaa"/>

        </LinearLayout>

        <!-- Testing LinearLayout.LayoutParams -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#dddddd"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test LinLay.LayoutParams 1"
                android:background="#aaaaaa"
                android:layout_gravity="top|left"
                android:layout_weight="70"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test LinLay.LayoutParams 2"
                android:background="#aaaaaa"
                android:layout_gravity="bottom|right"
                android:layout_weight="30"/>

        </LinearLayout>

        <!-- Test RelativeLayout (gravity) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#ffdddd"
            android:gravity="bottom|right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test RelativeLayout gravity"
                android:background="#aaaaaa"/>

        </RelativeLayout>

        <!-- Test RelativeLayout (ignoreGravity) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#dddddd"
            android:gravity="bottom|right"
            android:ignoreGravity="@id/textViewTest2">

            <TextView
                android:id="@id/textViewTest2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test RelativeLayout ignoreGravity"
                android:background="#aaaaaa"/>

        </RelativeLayout>

        <!-- Test RelativeLayout.LayoutParams
        Son muchos attribs pero al final todos basados en id o boolean -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffdddd">

            <TextView android:id="@id/testRelLayoutId"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Test RelativeLayout.LayoutParams"
                      android:background="#aaaaaa"
                      android:layout_alignParentBottom="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="To Right Of"
                android:background="#aaaaaa"
                android:layout_toRightOf="@id/testRelLayoutId"/>

        </RelativeLayout>

        <!-- Test AbsListView -->
        <ListView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#dddddd"
            android:entries="@array/sports_array"
            android:cacheColorHint="#ff0000"
            android:choiceMode="multipleChoice"
            android:drawSelectorOnTop="true"
            android:fastScrollEnabled="false"
            android:listSelector="#6600ff00"
            android:scrollingCache="false"
            android:smoothScrollbar="false"
            android:stackFromBottom="true"
            android:textFilterEnabled="true"
            android:transcriptMode="alwaysScroll"
            >

        </ListView>

        <!-- Test GridView -->
        <GridView android:id="@id/gridTestId"
                  android:layout_width="match_parent"
                  android:layout_height="75dp"
                  android:background="#ffdddd"
                  android:columnWidth="20dp"
                  android:gravity="center_vertical|center_horizontal"
                  android:horizontalSpacing="5dp"
                  android:numColumns="3"
                  android:stretchMode="columnWidth"
                  android:verticalSpacing="5dp"
            >

        </GridView>

    </LinearLayout>

</org.itsnat.itsnatdroidtest.testact.util.CustomScrollView>
