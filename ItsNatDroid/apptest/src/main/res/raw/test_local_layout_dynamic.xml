<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="org.itsnat.itsnatdroidtest.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <Button
            android:id="@id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK" />

        <Button
            android:id="@id/buttonReload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_reload" />

        <!-- Testing misc attribs (for instance access resources by res id) -->
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent">

            <TextView id="textViewTest1"
                      android:id="@id/textViewTest1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/hello_world1"
                      android:textSize="15dp"
                      android:padding="@dimen/activity_horizontal_margin"
                      android:textColor="#0000ff"
                      android:background="@android:color/holo_green_light"
                      android:layout_alignParentTop="true"
                      style="@style/test"/>

            <TextView android:id="@id/textViewTest2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/hello_world2"
                      android:background="#dddddd"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:layout_below="@id/textViewTest1" />
        </RelativeLayout>

        <!-- Testing custom currentTarget class -->
        <org.itsnat.itsnatdroidtest.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Custom View"
            android:background="#ffdddd"/>

        <!-- Testing layout_gravity y layout_weight -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#dddddd"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test layout_gravity 1"
                android:background="#aaaaaa"
                android:layout_gravity="top|left"
                android:layout_weight="70"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test layout_gravity 2"
                android:background="#aaaaaa"
                android:layout_gravity="bottom|right"
                android:layout_weight="30"/>

        </LinearLayout>

        <!-- Test margins and gravity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffdddd"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="0dp"
                android:text="Test Margins 1"
                android:background="#aaaaaa"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Test Margins 2"
                android:background="#aaaaaa"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Test gravity"
                android:gravity="bottom|right"
                android:background="#aaaaaa"/>

        </LinearLayout>

        <!-- Test LinearLayout gravity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dddddd"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test LinearLayout gravity 1"
                android:background="#aaaaaa"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test LinearLayout gravity 2"
                android:background="#aaaaaa"/>

        </LinearLayout>

        <!-- Test View Attribs (level 15)-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffdddd">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test View Attribs 1"
                android:alpha="0.7"
                android:background="#dddddd"
                android:clickable="true"
                android:contentDescription="For Testing View Attribs"
                android:drawingCacheQuality="auto" />

            <!-- Necesario un ScrollView o similar para poder testear fadeScrollbars, en TextView es ignorado
                requiresFadingEdge es necesario para que no se ignore fadingEdgeLength
             -->
            <ScrollView android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:fadeScrollbars="true"
                        android:requiresFadingEdge="vertical|horizontal"
                        android:fadingEdgeLength="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test View Attribs 2"
                android:background="#dddddd"
                android:filterTouchesWhenObscured="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hapticFeedbackEnabled="false"
                android:id="@id/testId"
                android:isScrollContainer="true"
                android:keepScreenOn="true"
                android:layerType="hardware"
                android:longClickable="true"
                android:minHeight="30dp"
                android:minWidth="30dp"
                android:nextFocusDown="@id/testId"
                android:nextFocusForward="@id/testId"
                android:nextFocusLeft="@id/testId"
                android:nextFocusRight="@id/testId"
                android:nextFocusUp="@id/testId"
                android:paddingLeft="10dp"
                android:paddingRight="11dp"
                android:paddingTop="12dp"
                android:paddingBottom="13dp"
                android:rotation="10.5"
                android:rotationX="45.5"
                android:rotationY="10.5"
                android:saveEnabled="false"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:scrollbarStyle="insideInset"
                android:soundEffectsEnabled="false"
                android:tag="theTag"
                android:transformPivotX="70dp"
                android:transformPivotY="10dp"
                android:translationX="10dp"
                android:translationY="10dp"
                />

        </LinearLayout>

    </LinearLayout>
</ScrollView>